<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchActivity"
        android:background="@color/grey_400"
>

   <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
       <EditText
               android:id="@+id/search_repository"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:elevation="6dp"
               android:hint="Search Repositories..."
               android:singleLine="true"
               android:drawableStart="@drawable/ic_search"
               android:drawablePadding="10dp"
               android:background="@drawable/rounded_corner_white"
               android:padding="10dp"
               android:layout_margin="10dp"
               android:textAlignment="textStart"
               android:layout_weight="10"
       />
       <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/search_btn"
               android:elevation="6dp"
               android:text="Search"
               android:textColor="@color/white"
               android:layout_weight="1"
               android:background="@drawable/rounded_corner_primary"
               android:layout_gravity="center"
               android:padding="10dp"
               android:layout_marginEnd="10dp"

       />

   </LinearLayout>

<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView

            android:id="@+id/repositoryListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/emptyResult"
            android:visibility="gone"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Repositories... "
                android:textStyle="italic"
                android:textSize="20sp"
        />
    </RelativeLayout>
</RelativeLayout>


</LinearLayout>